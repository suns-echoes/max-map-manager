{
	"compilerOptions": {
		"target": "ES2024",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ES2024"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		/* Path aliases */
		"paths": {
			"^actions/*": ["./front/src/actions/*"],
			"^api/*": ["./front/src/api/*"],
			"^events/*": ["./front/src/app-events/*"],
			"^state/*": ["./front/src/app-state/*"],
			"^ds/*": ["./front/src/ui/design-system/*"],
			"^lib/*": ["./front/src/lib/*"]
		}
	},
	"include": ["./front/src"]
}
