{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "max-map-manager",
	"version": "0.9.2",
	"identifier": "max-map-manager",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../../front/dist"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "M.A.X. Map Manager",
				"width": 800,
				"height": 600,
				"minWidth": 1128,
				"minHeight": 832,
				"resizable": false
			}
		],
		"security": {
			"csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' be: http://be.localhost",
			"devCsp": "default-src 'self' http://localhost:1420 ws://localhost:1420; img-src 'self' data: http://localhost:1420",
			"assetProtocol": {
				"enable": true,
				"scope": [
					"be"
				]
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/512x512.png",
			"icons/256x256.png",
			"icons/128x128.png",
			"icons/64x64.png",
			"icons/32x32.png",
			"icons/16x16.png",
			"icons/icon.ico"
		],
		"resources": [
			"resources/mmm.res",
			"resources/settings.json"
		],
		"linux": {
			"deb": {
				"desktopTemplate": "resources/linux/app.desktop",
				"files": {}
			}
		}
	}
}
